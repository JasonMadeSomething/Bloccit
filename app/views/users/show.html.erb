<div class="row">
  <div class="col-md-8">
    <div class="media">
      <br />
      <% avatar_url = User.avatar_url(@user, 128) %>
      <% unless avatar_url.nil? %>
        <div class="media-left">
          <%= image_tag avatar_url, class: 'media-object' %>
        </div>
      <% end %>
      <div class="media-body">
        <h2 class="media-heading"><%= @user.name %></h2>
        <small>
          <%= pluralize(@user.posts.count, 'post') %>
          <%= pluralize(@user.comments.count, 'comment') %>
        </small>
      </div>
    </div>
  </div>
</div>

<% if posts?(@user) %>
  <h2>Posts</h2>
  <%= render @user.posts %>
<% else %>
  <%= "#{@user.name} has not submitted any posts yet" %>
<% end %>

<% if comments?(@user) %>
  <h2>Comments</h2>
  <%= render @user.comments %>
<% else %>
  <%= "#{@user.name} has not submitted any comments yet" %>
<% end %>

<% if !(@user.favorites.empty?) %>
  <h2>Favorites</h2>
  <% @user.favorites.each do |fav| %>
    <div class="media">
      <div class="pull-left">
        <%= image_tag User.avatar_url(fav.post.user, 48), class: "gravatar" %>
        <div><strong><%= fav.post.points %> points</strong></div>
      </div>
      <div class="media-body">
        <h4 class="media-heading"><%= link_to fav.post.title, topic_post_path( fav.post.topic, fav.post) %> </h4>
        <small>
          submitted <%= time_ago_in_words(fav.post.created_at) %> ago by <%= fav.post.user.name %> <br>
          <%= pluralize(fav.post.comments.count, 'comment') %>
        </small>
      </div>
    </div>
  <% end %>
<% end %>